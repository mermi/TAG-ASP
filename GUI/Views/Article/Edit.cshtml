@model Data.Models.article

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Article</h2>

@Html.ValidationSummary("Please correct the errors and try again.") 

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <fieldset>
            <legend>article</legend>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label for="pubDate" class="control-label col-md-2">Publication Date:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.pubDate, new { htmlAttributes = new { @class = "form-control", type="DataTime"} })
                    @Html.ValidationMessageFor(model => model.pubDate, "*", new { @class = "text-danger" })
                    @Html.ValidationSummary("Please correct the errors and try again.")
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-2" for="text">Content:</label>
                <div class="col-md-10">
                    @Html.TextArea("text", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.text, "*", new { @class = "text-danger" })
                    @Html.ValidationSummary("Please correct the errors and try again.")
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="title">Title :</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.title, "*", new { @class = "text-danger" })
                    @Html.ValidationSummary("Please correct the errors and try again.")
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="video">Change video:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.video, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.video, "", new { @class = "text-danger" })
                    @Html.ValidationSummary("Please correct the errors and try again.")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </fieldset>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
